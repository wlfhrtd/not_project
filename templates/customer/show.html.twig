{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ customer.lastName }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ customer.firstName }}</td>
            </tr>
            <tr>
                <th>Middle Name</th>
                <td>{{ customer.middleName }}</td>
            </tr>
            <tr>
                <th>DocumentFilename</th>
                <td>{{ customer.documentFilename }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ customer.street }}</td>
            </tr>
            <tr>
                <th>BuildingNumber</th>
                <td>{{ customer.buildingNumber }}</td>
            </tr>
            <tr>
                <th>Apartment</th>
                <td>{{ customer.apartment }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ customer.info }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ customer.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ customer.updatedAt ? customer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_customer_index') }}">back to list</a>

    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            let $productName = $('#product_name');
            addCapitalization($productName);
        })

        function addCapitalization($input) {
            $input.on('keyup', function (e) {
                e.target.value = e.target.value.substring(0, 1).toUpperCase() + e.target.value.substring(1).toLowerCase();
            })
        }
    </script>
{% endblock%}

{% block body %}
    <h1>Create new Product</h1>

    {{ include('product/_form.html.twig') }}

    <a href="{{ path('app_product_index') }}">back to list</a>
{% endblock %}
